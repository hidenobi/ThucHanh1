<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.thbuoi1.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_leftFragment"
            app:destination="@id/leftFragment" />
        <action
            android:id="@+id/action_homeFragment_to_rightFragment"
            app:destination="@id/rightFragment" />
    </fragment>
    <fragment
        android:id="@+id/leftFragment"
        android:name="com.example.thbuoi1.fragments.LeftFragment"
        android:label="fragment_left"
        tools:layout="@layout/fragment_left" />
    <fragment
        android:id="@+id/rightFragment"
        android:name="com.example.thbuoi1.fragments.RightFragment"
        android:label="fragment_right"
        tools:layout="@layout/fragment_right" />
</navigation>